<TrendsScreen>:
    
    MDBoxLayout:
        orientation: "vertical"
        BoxLayout:
            pos_hint: { 'center_y':1}
            size_hint: 1, .15
            #size: 400, 400
            canvas:
                Color:
                    rgba: 15/255,228/255,133/255 ,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0,0,20,20]
            MDIconButton:
                icon: 'arrow-left'
                text_color: 1,1,1,1
                theme_text_color: 'Custom'
                pos_hint: {'center_y': .5}
                on_release:
                    app.root.current = 'home_screen'
                    app.root.transition.direction = 'right'
            MDLabel:
                text: 'Trends in Education'
                pos_hint: {'center_x': .7, 'center_y': .5}
                font_size: 25
                text_color: 1,1,1,1.
                font_name: 'fonts/helvetica-neue-5/HelveticaNeueRoman.otf'
                bold: True
                theme_text_color: 'Custom'
        Label:
            size_hint_y: None
            height: 10
        
        Label:
            id: question_number
            text:'1'
            size_hint_y: None
            size_hint_x: None
            font_name: 'fonts/PTSerif-Regular.ttf'
            spacing:0,10,0,0
            pos_hint: {'center_x': .1}
            font_size: 25
            color: 0,0,0,1
            bold: True
            theme_text_color: 'Custom'
            height: 40
            width: 40
            canvas.before:
                Color:
                    rgba: 0,0,0,1  # Set your desired RGB color values
                Line:
                    rounded_rectangle: (self.x,self.y, self.width, self.height,20)
                    width: .8
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 10
                MDLabel:
                    text: root.question_text
                    font_size: 17
                    font_name: 'fonts/helvetica-neue-5/HelveticaNeueRoman.otf'
                    adaptive_height: True
                    padding: 10
                    halign: 'left'
                    color: 0,0,0,1
                    canvas.before:
                        Color:
                            rgba: 0,1,0,1  # Set your desired RGB color values
                        Line:
                            rounded_rectangle: (self.x,self.y, self.width, self.height,20)
                            width: .5

                GridLayout:
                    cols: 1
                    spacing: 10
                    padding: 0,28,0,0
                    font_size: 15
                    
                    Button:
                        id: a_btn
                        text: root.answer_a_text
                        on_release: root.check_answer("a")
                        font_name: 'fonts/helvetica-neue-5/HelveticaNeueRoman.otf'
                        color: 0,0,0,1
                        valign:'middle'
                        background_color: .9,.9,1,1
                        background_normal: ''
                        text_size: self.width-8,self.height-5
                        padding: 9,0,5,0
                    Button:
                        id: b_btn
                        text: root.answer_b_text
                        on_release: root.check_answer("b")
                        font_name: 'fonts/helvetica-neue-5/HelveticaNeueRoman.otf'
                        color: 0,0,0,1
                        valign:'middle'
                        background_color: .9,.9,1,1
                        background_normal: ''
                        text_size: self.width-8,self.height-5
                        padding: 9,0,5,0
                    
                    Button:
                        id: c_btn
                        text: root.answer_c_text
                        on_release: root.check_answer("c")
                        font_name: 'fonts/helvetica-neue-5/HelveticaNeueRoman.otf'
                        color: 0,0,0,1
                        valign:'middle'
                        background_color: .9,.9,1,1
                        background_normal: ''
                        text_size: self.width,self.height
                        padding: 9,0,5,0
                    Button:
                        id: d_btn
                        text: root.answer_d_text
                        on_release: root.check_answer("d")
                        font_name: 'fonts/helvetica-neue-5/HelveticaNeueRoman.otf'
                        color: 0,0,0,1
                        valign:'middle'
                        background_color: .9,.9,1,1
                        background_normal: ''
                        text_size: self.width-8,self.height-5
                        padding: 9,0,5,0
                    GridLayout:
                        cols: 2
                        spacing: 20 
                        padding: 14,12,0,0  
                                       
                        MDRectangleFlatButton:
                            id: back_button 
                            text: "Back"
                            on_release: root.previous_question()
                            disabled: False  # Disable button if no answer selected
                            text_color: 0,1,0,1
                            elevation: 0
                            size_hint: .15,None
                            font_style: 'Button'
                            size_hint_min: 10,20
                        MDRaisedButton:
                            text: "Next"
                            on_release: root.next_question()
                            text_color: 1,1,1,1
                            bold:True
                            elevation: 0
                            size_hint: .15,None
                            font_style: 'Button'
                            size_hint_min: 10,20
                        

                        
                    
                                    
                    



