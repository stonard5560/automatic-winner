<WelcomeScreen>:
    
    MDFloatLayout:
        md_bg_color: 1,1,1,1 

        Image:
            source: "images/3.png"
            pos_hint: {'center_x': .1, 'center_y': .94}
            size_hint: .3,.3
        
        Video:
            source: 'videos/logo_animation.mp4'
            state: 'play'
            options: {'eos': 'loop'}
            pos_hint: {'center_x': .5, 'center_y': .7}
            size_hint: .5,.5
            #allow_stretch: True
            # Hide the play controls
            #controls: False
        
